<?xml version="1.0" encoding="utf-8"?>
<com.mrkurilin.sample_project.ExpandableView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:toggleButtonText="@string/togglebutton">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_toggle_button_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/toggle_button_background_toggle_button_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textOff="@string/background_off"
            android:textOn="@string/background_on"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/imageview_toggle_button_widget" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/toggle_button_content_toggle_button_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textOff="@string/content_off"
            android:textOn="@string/content_on"
            app:layout_constraintBottom_toTopOf="@id/toggle_button_text_toggle_button_widget"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toggle_button_background_toggle_button_widget" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/toggle_button_text_toggle_button_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textOff="@string/text_off"
            android:textOn="@string/text_on"
            app:layout_constraintBottom_toBottomOf="@id/textview_toggle_button_widget"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageview_toggle_button_widget"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/toggle_button_widget_s_imageview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_toggle_button_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/keep_calm_and_code_on"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/imageview_toggle_button_widget"
            app:layout_constraintStart_toStartOf="@id/imageview_toggle_button_widget"
            app:layout_constraintTop_toBottomOf="@id/imageview_toggle_button_widget" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.mrkurilin.sample_project.ExpandableView>