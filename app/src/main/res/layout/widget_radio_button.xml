<?xml version="1.0" encoding="utf-8"?>

<com.mrkurilin.sample_project.ExpandableView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:toggleButtonText="@string/radio_button">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RadioGroup
            android:id="@+id/radio_group_radiobutton_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/red_radiobutton_radiobutton_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/red" />

            <RadioButton
                android:id="@+id/green_radiobutton_radiobutton_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/green" />

            <RadioButton
                android:id="@+id/blue_radiobutton_radiobutton_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/blue" />

        </RadioGroup>

        <View
            android:id="@+id/view_radiobutton_widget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:background="@color/white" />

    </LinearLayout>

</com.mrkurilin.sample_project.ExpandableView>